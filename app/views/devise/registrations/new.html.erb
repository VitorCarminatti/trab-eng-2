<div class='text-center container'>
  <h2>Cadastre-se</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.input :email, autofocus: true, autocomplete: "email", label: 'E-mail' %>
    <%= f.input :password, autofocus: true, autocomplete: "new-password", label: 'Senha' %>
    <%= f.input :password_confirmation, autofocus: true, autocomplete: "new-password", label: 'Confirme a senha' %>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
