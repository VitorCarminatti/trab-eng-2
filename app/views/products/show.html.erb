<div class="super_container">

	<div class="single_product">
		<div class="container">
			<div class="row">

				<div class="col-lg-2 order-lg-1 order-2">
					<ul class="image_list">
						<li data-image="images/single_4.jpg"><%= image_tag("single_4.jpg") %></li>
						<li data-image="images/single_2.jpg"><%= image_tag("single_2.jpg") %></li>
						<li data-image="images/single_3.jpg"><%= image_tag("single_3.jpg") %></li>
					</ul>
				</div>

				<div class="col-lg-5 order-lg-2 order-1">
					<div class="image_selected"><%= image_tag("single_4.jpg") %></div>
				</div>

				<div class="col-lg-5 order-3">
					<div class="product_description">
						<div class="product_category"><%= @product.brand.name %></div>
						<div class="product_name"><%= @product.name %></div>
						<div class="rating_r rating_r_4 product_rating"><i></i><i></i><i></i><i></i><i></i></div>
						<div class="product_text"><p><%= @product.description %></p></div>
						<div class="order_info d-flex flex-row">
							<form action="#">
								<input type="hidden" name="product_id" value="<%= @product.id %>">
								<div class="clearfix" style="z-index: 1000;">

									<div class="product_quantity clearfix">
										<span>Quantidade: </span>
										<input id="quantity_input" type="text" pattern="[0-9]*" value="1" maxlength="<%= @product.quantity - @product.quantity_in_cart(session.id) %>">
										<div class="quantity_buttons">
											<div id="quantity_inc_button" class="quantity_inc quantity_control"><i class="fa fa-chevron-up"></i></div>
											<div id="quantity_dec_button" class="quantity_dec quantity_control"><i class="fa fa-chevron-down"></i></div>
										</div>
									</div>

								</div>

								<div class="product_price">R$<%= @product.price %></div>
								<div class="button_container">
									<button type="button" class="button cart_button">Adicionar ao Carrinho</button>
									<div class="product_fav"><i class="fa fa-heart"></i></div>
								</div>
								
							</form>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>

	<!-- Marcas -->

	<div class="brands">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="brands_slider_container">

						<div class="owl-carousel owl-theme brands_slider">
							
							<div class="owl-item"><div class="brands_item d-flex flex-column justify-content-center"><%= image_tag("brands_1.jpg") %></div></div>
							<div class="owl-item"><div class="brands_item d-flex flex-column justify-content-center"><%= image_tag("brands_2.jpg") %></div></div>
							<div class="owl-item"><div class="brands_item d-flex flex-column justify-content-center"><%= image_tag("brands_3.jpg") %></div></div>
							<div class="owl-item"><div class="brands_item d-flex flex-column justify-content-center"><%= image_tag("brands_4.jpg") %></div></div>
							<div class="owl-item"><div class="brands_item d-flex flex-column justify-content-center"><%= image_tag("brands_5.jpg") %></div></div>
							<div class="owl-item"><div class="brands_item d-flex flex-column justify-content-center"><%= image_tag("brands_6.jpg") %></div></div>
							<div class="owl-item"><div class="brands_item d-flex flex-column justify-content-center"><%= image_tag("brands_7.jpg") %></div></div>
							<div class="owl-item"><div class="brands_item d-flex flex-column justify-content-center"><%= image_tag("brands_8.jpg") %></div></div>

						</div>
						
						<div class="brands_nav brands_prev"><i class="fa fa-chevron-left"></i></div>
						<div class="brands_nav brands_next"><i class="fa fa-chevron-right"></i></div>

					</div>
				</div>
			</div>
		</div>
	</div>

</div>